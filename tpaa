using System; 

namespace ConsoleApp2 

{ 

    class Program 

    { 
            static void Main(string[] args) 

        { 

                string nome; 

                string idade; 

                string cidade; 

 

                Console.Write("Digite seu nome!"); 

                nome = Console.ReadLine(); 

 

                Console.Write("Digite sua idade!"); 

                idade = Console.ReadLine(); 

 

                Console.Write("Digite o nome da sua cidade!"); 

                cidade = Console.ReadLine(); 

 

                Console.WriteLine("***Informações digitadas***"); 

                Console.WriteLine("Seu nome é:" + nome); 

                Console.WriteLine("A sua idade é:" + idade); 

                Console.WriteLine("Voce mora na cidade de:" + cidade); 

 

                Console.ReadKey(); 

        } 

    } 

} 


using System; 

 

namespace ConsoleApp2 

{ 

    class Program 

    { 

        static void Main(string[] args) 

        { 

            int a, b, c; 

            Console.Write("Digite o numero a ser dobrado"); 

            a = Convert.ToInt32(Console.ReadLine()); 

 

            b = 2; 

 

            c = a * b; 

 

            Console.Write(a + " * " + b + " = " + c); 

 

            Console.ReadKey(); 

 

        } 

    } 

} 

