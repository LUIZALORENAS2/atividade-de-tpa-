            b = Convert.ToInt32(Console.ReadLine()); 

 

            Console.WriteLine("O valor da variavel a é: " + b); 

            Console.WriteLine("O valor da variavel b é: " + a); 

 

 

            Console.ReadKey(); 

 

        } 

    } 

} 

using System; 

 

namespace ConsoleApp2 

{ 

    class Program 

    { 

        static void Main(string[] args) 

        { 

            Console.WriteLine("Por favor escolhe um valor para as variaveis X, Y, Z, e W, para a seguinte noçao logica ((x >= y) AND (z <= x)) OR ((x == w) AND (y== z)) or (NOT(x != w ))"); 

            int x, y, z, w; 

            Console.Write("Digite o valor de x"); 

            x = Convert.ToInt32(Console.ReadLine()); 

             

            Console.Write("Digite o valor de y"); 

            y = Convert.ToInt32(Console.ReadLine()); 

 

            Console.Write("Digite o valor de z"); 

            z = Convert.ToInt32(Console.ReadLine()); 

 

            Console.Write("Digite o valor de w"); 

            w = Convert.ToInt32(Console.ReadLine()); 

 

            Console.WriteLine("((" + x + " >= " + y + ") AND (" + z + "<= " + x + ")) OR ((" + x + " == " + w + ") AND (" + y + " == " + z + ")) OR (NOT(" + x + " != " + w + "))"); 

 

 

            Console.ReadKey(); 

 

        } 

    } 

} 
